{
  "compilerOptions": {
    "module": "commonjs",                      // ✅ Required for nanoid ESM support
    "target": "ES2023",                      // ✅ Keep your target
    "types": ["node"],
    "declaration": true,
    "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./src/auth/types"],

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",              // ✅ Add this to ensure ESM works
    "esModuleInterop": true,                 // ✅ Important for compatibility
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
